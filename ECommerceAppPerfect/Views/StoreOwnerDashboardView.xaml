<UserControl x:Class="ECommerceAppPerfect.Views.StoreOwnerDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ECommerceAppPerfect.Views"
             xmlns:vm="clr-namespace:ECommerceAppPerfect.ViewModels"
             xmlns:converters="clr-namespace:ECommerceAppPerfect.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#F5F5F5">

    <!-- ==================== RESURSE LOCALE PENTRU DASHBOARD ==================== -->
    <!-- Stiluri specifice pentru cardurile de statistici È™i navigare -->
    <UserControl.Resources>
        <!-- Stil pentru cardurile de statistici - design Material cu umbrÄƒ -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <!-- UmbrÄƒ subtilÄƒ pentru efect de elevaÈ›ie -->
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.1" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stil pentru butoanele de navigare din meniul lateral -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Efect hover pentru butoanele de navigare -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stil pentru butoanele de acÈ›iune rapidÄƒ -->
        <Style x:Key="QuickActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF5722"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E64A19"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ==================== LAYOUT PRINCIPAL CU DOUÄ‚ COLOANE ==================== -->
    <!-- Coloana stÃ¢ngÄƒ: meniu navigare, Coloana dreaptÄƒ: conÈ›inut dashboard -->
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- ColoanÄƒ pentru meniul de navigare lateral - lÄƒÈ›ime fixÄƒ -->
            <ColumnDefinition Width="250"/>
            <!-- ColoanÄƒ pentru conÈ›inutul principal - ocupÄƒ restul spaÈ›iului -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ==================== MENIU NAVIGARE LATERAL ==================== -->
        <!-- Panou lateral cu fundal albastru primar pentru navigare -->
        <Border Grid.Column="0" Background="#2196F3">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- RÃ¢nd pentru header cu logo È™i titlu -->
                    <RowDefinition Height="Auto"/>
                    <!-- RÃ¢nd pentru butoanele de navigare -->
                    <RowDefinition Height="*"/>
                    <!-- RÃ¢nd pentru informaÈ›ii utilizator È™i deconectare -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ===== HEADER MENIU ===== -->
                <!-- Logo È™i titlul aplicaÈ›iei Ã®n partea de sus -->
                <StackPanel Grid.Row="0" Margin="20,30,20,40">
                    <TextBlock Text="ðŸª"
                               FontSize="40"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Panou Admin"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="Gestionare magazin"
                               FontSize="12"
                               Foreground="#BBDEFB"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- ===== BUTOANE NAVIGARE ===== -->
                <!-- Lista de butoane pentru navigarea Ã®ntre secÈ›iuni -->
                <StackPanel Grid.Row="1" Margin="15,0">
                    <!-- Buton Dashboard - pagina curentÄƒ -->
                    <Button Content="ðŸ“Š Dashboard"
                            Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToDashboardCommand}"/>

                    <!-- Buton pentru gestionarea produselor -->
                    <Button Content="ðŸ“¦ Produse"
                            Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToProductsCommand}"/>

                    <!-- Buton pentru gestionarea inventarului -->
                    <Button Content="ðŸ“‹ Inventar"
                            Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToInventoryCommand}"/>

                    <!-- Buton pentru gestionarea comenzilor -->
                    <Button Content="ðŸ›’ Comenzi"
                            Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToOrdersCommand}"/>

                    <!-- Buton pentru serviciul clienÈ›i -->
                    <Button Content="ðŸ’¬ Suport ClienÈ›i"
                            Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToCustomerServiceCommand}"/>

                    <!-- Buton pentru setÄƒrile magazinului -->
                    <Button Content="âš™ï¸ SetÄƒri"
                            Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToSettingsCommand}"/>
                </StackPanel>

                <!-- ===== SECÈšIUNE UTILIZATOR ===== -->
                <!-- InformaÈ›ii despre utilizatorul conectat È™i buton deconectare -->
                <StackPanel Grid.Row="2" Margin="15,0,15,20">
                    <Border Background="#1976D2" CornerRadius="8" Padding="15">
                        <StackPanel>
                            <!-- Numele utilizatorului conectat -->
                            <TextBlock Text="{Binding CurrentUser}"
                                       Foreground="White"
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Administrator"
                                       Foreground="#BBDEFB"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                    <!-- Buton pentru deconectare -->
                    <Button Content="ðŸšª Deconectare"
                            Style="{StaticResource NavButtonStyle}"
                            Command="{Binding LogoutCommand}"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ==================== CONÈšINUT PRINCIPAL DASHBOARD ==================== -->
        <!-- Zona principalÄƒ cu statistici È™i acÈ›iuni rapide -->
        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="30">
                <!-- ===== HEADER PAGINÄ‚ ===== -->
                <!-- Titlul È™i data curentÄƒ -->
                <Grid Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Dashboard"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#212121"/>
                        <TextBlock Text="{Binding CurrentDate, StringFormat='ðŸ“… {0:dddd, dd MMMM yyyy}'}"
                                   FontSize="14"
                                   Foreground="#757575"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- ===== CARDURI STATISTICI ===== -->
                <!-- Grid cu 4 carduri pentru statisticile principale -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Card 1: Total Produse -->
                    <!-- AfiÈ™eazÄƒ numÄƒrul total de produse din magazin -->
                    <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“¦" FontSize="32"/>
                            <TextBlock Text="Total Produse"
                                       FontSize="13"
                                       Foreground="#757575"
                                       Margin="0,10,0,5"/>
                            <!-- Binding la proprietatea din ViewModel -->
                            <TextBlock Text="{Binding TotalProducts}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 2: Comenzi Noi -->
                    <!-- AfiÈ™eazÄƒ numÄƒrul de comenzi noi/Ã®n aÈ™teptare -->
                    <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ›’" FontSize="32"/>
                            <TextBlock Text="Comenzi Noi"
                                       FontSize="13"
                                       Foreground="#757575"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="{Binding NewOrders}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#FF5722"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 3: Venituri -->
                    <!-- AfiÈ™eazÄƒ veniturile totale cu formatare monetarÄƒ -->
                    <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’°" FontSize="32"/>
                            <TextBlock Text="Venituri Totale"
                                       FontSize="13"
                                       Foreground="#757575"
                                       Margin="0,10,0,5"/>
                            <!-- StringFormat pentru afiÈ™area sumei Ã®n format monetar -->
                            <TextBlock Text="{Binding TotalRevenue, StringFormat='{}{0:N2} RON'}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 4: Stoc ScÄƒzut -->
                    <!-- AfiÈ™eazÄƒ produsele cu stoc sub limita minimÄƒ -->
                    <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="âš ï¸" FontSize="32"/>
                            <TextBlock Text="Stoc ScÄƒzut"
                                       FontSize="13"
                                       Foreground="#757575"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="{Binding LowStockCount}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#F44336"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- ===== ACÈšIUNI RAPIDE ===== -->
                <!-- SecÈ›iune cu butoane pentru acÈ›iuni frecvente -->
                <Border Style="{StaticResource StatCardStyle}" Margin="0">
                    <StackPanel>
                        <TextBlock Text="âš¡ AcÈ›iuni Rapide"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#212121"
                                   Margin="0,0,0,20"/>

                        <!-- WrapPanel pentru aranjarea butoanelor pe mai multe rÃ¢nduri -->
                        <WrapPanel>
                            <!-- Buton pentru adÄƒugarea unui produs nou -->
                            <Button Content="âž• AdaugÄƒ Produs"
                                    Style="{StaticResource QuickActionButtonStyle}"
                                    Command="{Binding AddProductCommand}"/>

                            <!-- Buton pentru vizualizarea comenzilor -->
                            <Button Content="ðŸ“‹ Vezi Comenzi"
                                    Style="{StaticResource QuickActionButtonStyle}"
                                    Command="{Binding ViewOrdersCommand}"/>

                            <!-- Buton pentru actualizarea stocului -->
                            <Button Content="ðŸ“¦ ActualizeazÄƒ Stoc"
                                    Style="{StaticResource QuickActionButtonStyle}"
                                    Command="{Binding UpdateStockCommand}"/>

                            <!-- Buton pentru generarea rapoartelor -->
                            <Button Content="ðŸ“Š GenereazÄƒ Raport"
                                    Style="{StaticResource QuickActionButtonStyle}"
                                    Command="{Binding GenerateReportCommand}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- ===== COMENZI RECENTE ===== -->
                <!-- Tabel cu ultimele comenzi pentru monitorizare rapidÄƒ -->
                <Border Style="{StaticResource StatCardStyle}" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Comenzi Recente"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#212121"
                                   Margin="0,0,0,20"/>

                        <!-- DataGrid pentru afiÈ™area comenzilor recente -->
                        <!-- ItemsSource legat de colecÈ›ia din ViewModel -->
                        <DataGrid ItemsSource="{Binding RecentOrders}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  RowBackground="White"
                                  AlternatingRowBackground="#FAFAFA">
                            <DataGrid.Columns>
                                <!-- ColoanÄƒ ID comandÄƒ -->
                                <DataGridTextColumn Header="ID"
                                                    Binding="{Binding OrderId}"
                                                    Width="80"/>
                                <!-- ColoanÄƒ client -->
                                <DataGridTextColumn Header="Client"
                                                    Binding="{Binding CustomerName}"
                                                    Width="*"/>
                                <!-- ColoanÄƒ total cu formatare monetarÄƒ -->
                                <DataGridTextColumn Header="Total"
                                                    Binding="{Binding Total, StringFormat='{}{0:N2} RON'}"
                                                    Width="120"/>
                                <!-- ColoanÄƒ status comandÄƒ -->
                                <DataGridTextColumn Header="Status"
                                                    Binding="{Binding Status}"
                                                    Width="120"/>
                                <!-- ColoanÄƒ datÄƒ comandÄƒ -->
                                <DataGridTextColumn Header="Data"
                                                    Binding="{Binding OrderDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                                                    Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
