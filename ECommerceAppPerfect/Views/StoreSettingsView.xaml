            <!-- ==================== SECÈšIUNE: SETÄ‚RI COMENZI ==================== -->
            <!-- Card cu configurÄƒrile pentru procesarea comenzilor -->
            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel>
                    <!-- Titlu secÈ›iune -->
